<h1>Restaurants</h1>
<% @restaurants.each do |restaurant| %>
  <div class="restaurant">
    <div class="restaurant-name"><%= link_to restaurant.name, restaurant_path(restaurant) %></div>
    <%= restaurant.address %>
    - <%= link_to "Delete", restaurant_path(restaurant),
      method: :delete,
      data: { confirm: "Are you sure?" }, id: "delete-index" %>
  </div>
<% end %>
<%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-primary" %>
