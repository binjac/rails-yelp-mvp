<h1><%= @restaurant.name %></h1> <h2><%= @restaurant.category.capitalize %></h2>
<button class="btn"><%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %></button>
<p>- Adress: <%= @restaurant.address %></p>
<p>- Phone number: <%= @restaurant.phone_number %></p>
<div class="reviews">
  <strong>Reviews:</strong>
  <% @restaurant.reviews.each do |review| %>
  <br>
    <% review.rating.times do %>
      <i class="fas fa-star"></i>
    <% end %>
    <% (5-(review.rating)).times do %>
      <i class="far fa-star"></i>
    <% end %>
    <%= review.content %>
  <% end %>
</div>
<div class="buttons">
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
  <%= link_to "Delete", restaurant_path(@restaurant),
      method: :delete,
      data: { confirm: "Are you sure?" }, class: "btn btn-danger", id: "delete-index" %>
</div>
<%= link_to "Back to list", restaurants_path %>
